<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.FragmentLogin"
            android:orientation="vertical"
    android:background="@drawable/d_background_login"
              >

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="12dp">

        <EditText
            android:id="@+id/editTextEmails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorFieldEditText"
            android:textColorHighlight="@color/colorFieldEditText"
            android:textColorHint="@color/colorFieldEditText"
            android:textSize="14sp" />
        <!--android:background="@drawable/border_edittext_atas_light"-->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextEmails"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:password="false"
            android:textColor="@color/colorFieldEditText"
            android:textColorHighlight="@color/colorFieldEditText"
            android:textColorHint="@color/colorFieldEditText"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonLogin"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@+id/buttonDaftar"
            android:layout_toStartOf="@+id/buttonDaftar"
            android:background="@drawable/shape_button_primary"
            android:padding="0dp"
            android:text="Login"
            android:textColor="#414141"
            android:textSize="12sp"
            android:layout_marginRight="12dp"/>

        <Button
            android:id="@+id/buttonDaftar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="75dp"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/buttonLogin"
            android:layout_alignBottom="@+id/buttonLogin"
            android:layout_alignEnd="@+id/editTextPassword"
            android:layout_alignRight="@+id/editTextPassword"
            android:background="@drawable/shape_button_secondary"
            android:text="Signup"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:elevation="21dp">

    </RelativeLayout>

</LinearLayout>
